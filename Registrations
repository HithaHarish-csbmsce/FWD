<body>
    <div class="form-container">
        <h2>Participant Registration</h2>
        <form action="submit_participant.php" method="POST">
            <!-- Choose Single or Team -->
            <div class="form-field">
                <i class="fas fa-users"></i>
                <label for="isTeam">Are you a single participant or part of a team?</label>
                <select id="isTeam" name="isTeam" required onchange="toggleTeamSize()">
                    <option value="">Select</option>
                    <option value="single">Single Participant</option>
                    <option value="team">Team</option>
                </select>
            </div>

            <!-- Static Team Size Selection (Max Size: 5) -->
            <div class="form-field">
                <i class="fas fa-user-friends"></i>
                <label for="teamSize">Select Team Size:</label>
                <select id="teamSize" name="teamSize" required onchange="updateTeamMembers()">
                    <option value="">Select Team Size</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>

            <!-- Team Member Details Container -->
            <div id="teamMembersContainer"></div>

            <!-- Submit Button -->
            <button type="submit" class="submit-btn">Submit</button>
        </form>
    </div>

    <script>
        function toggleTeamSize() {
            const isTeamSelect = document.getElementById('isTeam');
            const teamSizeSelect = document.getElementById('teamSize');
            const teamMembersContainer = document.getElementById('teamMembersContainer');

            // Clear previous member details
            teamMembersContainer.innerHTML = '';

            // Disable team size if "Single Participant" is selected
            if (isTeamSelect.value === 'single') {
                teamSizeSelect.value = "1";
                teamSizeSelect.disabled = true;
                addTeamMemberFields(1); // Add fields for single participant
            } else {
                teamSizeSelect.disabled = false;
                updateTeamMembers(); // Update fields based on selected team size
            }
        }

        function updateTeamMembers() {
            const teamSize = document.getElementById('teamSize').value;
            const teamMembersContainer = document.getElementById('teamMembersContainer');

            // Clear previous member details
            teamMembersContainer.innerHTML = '';

            // Add fields for each team member
            for (let i = 1; i <= teamSize; i++) {
                addTeamMemberFields(i);
            }
        }

        function addTeamMemberFields(index) {
            const teamMembersContainer = document.getElementById('teamMembersContainer');
            const memberDiv = document.createElement('div');
            memberDiv.classList.add('team-member');

            memberDiv.innerHTML = `
                <h3>Team Member ${index}</h3>
                <div class="form-field">
                    <i class="fas fa-user"></i>
                    <label for="name${index}">Name:</label>
                    <input type="text" id="name${index}" name="name${index}" required>
                </div>
                <div class="form-field">
                    <i class="fas fa-id-badge"></i>
                    <label for="usn${index}">USN:</label>
                    <input type="text" id="usn${index}" name="usn${index}" required>
                </div>
                <div class="form-field">
                    <i class="fas fa-envelope"></i>
                    <label for="collegeEmail${index}">College Mail ID:</label>
                    <input type="email" id="collegeEmail${index}" name="collegeEmail${index}" required>
                </div>
                <div class="form-field">
                    <i class="fas fa-phone"></i>
                    <label for="contact${index}">Contact Number:</label>
                    <input type="tel" id="contact${index}" name="contact${index}" pattern="[0-9]{10}" required>
                </div>
                <div class="form-field">
                    <i class="fas fa-building"></i>
                    <label for="branch${index}">Branch:</label>
                    <select id="branch${index}" name="branch${index}" required>
                        <option value="">Select your branch</option>
                        <option value="cse">Computer Science</option>
                        <option value="ece">Electronics & Communication</option>
                        <option value="mech">Mechanical Engineering</option>
                        <option value="civil">Civil Engineering</option>
                        <option value="eee">Electrical & Electronics Engineering</option>
                        <option value="it">Information Technology</option>
                        <option value="bio">Biotechnology</option>
                        <option value="aero">Aerospace Engineering</option>
                    </select>
                </div>
                <div class="form-field">
                    <i class="fas fa-calendar"></i>
                    <label for="semester${index}">Semester:</label>
                    <select id="semester${index}" name="semester${index}" required>
                        <option value="">Select your semester</option>
                        <option value="1">1st Semester</option>
                        <option value="2">2nd Semester</option>
                        <option value="3">3rd Semester</option>
                        <option value="4">4th Semester</option>
                        <option value="5">5th Semester</option>
                        <option value="6">6th Semester</option>
                        <option value="7">7th Semester</option>
                        <option value="8">8th Semester</option>
                    </select>
                </div>
            `;
            teamMembersContainer.appendChild(memberDiv);
        }
    </script>
</body>
</html>
